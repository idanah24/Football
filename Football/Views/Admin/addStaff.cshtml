@model Football.Models.Staff

@{
    ViewBag.Title = "addStaff";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Add New Staff</h2>
<hr />
@using (Html.BeginForm("SubmitStaff", "Admin", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputJob" class="col-sm-2 col-form-label">Job</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.job, new { @class = "form-control", id = "inputJob" })
            <small class="text-danger">@ViewBag.StaffError @Html.ValidationMessageFor(x => x.job)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputFirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", id = "inputFirstName" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.firstName)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputLastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", id = "inputLastName" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.lastName)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputAge" class="col-sm-2 col-form-label">Age</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.age, new { @class = "form-control", id = "inputAge" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.age)</small>
        </div>
    </div>

    <input class="btn btn-outline-primary" id="submit" type="submit" value="Add Staff" />
}