@model Football.Models.Player

@{
    ViewBag.Title = "addPlayer";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Add New Player</h2>
<hr />
    @using (Html.BeginForm("SubmitPlayer", "Admin", FormMethod.Post))
    {
        <div class="form-group row">
            <label for="inputNumber" class="col-sm-2 col-form-label">Number</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.number, new { @class = "form-control", id = "inputNumber" })
                <small class="text-danger">@ViewBag.PlayerError @Html.ValidationMessageFor(x => x.number)</small>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputFirstName" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", id = "inputFirstName" })
                <small class="text-danger">@Html.ValidationMessageFor(x => x.firstName)</small>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputLastName" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", id = "inputLastName" })
                <small class="text-danger">@Html.ValidationMessageFor(x => x.lastName)</small>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputRating" class="col-sm-2 col-form-label">Rating</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.rating, new { @class = "form-control", id = "inputRating" })
                <small class="text-danger">@Html.ValidationMessageFor(x => x.rating)</small>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputPosition" class="col-sm-2 col-form-label">Position</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.position, new { @class = "form-control", id = "inputPosition" })
                <small class="text-danger">@Html.ValidationMessageFor(x => x.position)</small>
            </div>
        </div>

        <input class="btn btn-outline-primary" id="submit" type="submit" value="Add Player" />
    }
